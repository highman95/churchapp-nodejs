<link href="/assets/css/signin.css" rel="stylesheet" />

<h3>Login</h3>
<hr />

<div class="col-lg-4 offset-lg-8 mt-5">
  <form
    name="form"
    class="form-signin"
    method="post"
    enctype="application/x-www-form-urlencoded"
  >
    {{#if hasMessages}}
      <ul class="small">
        {{#each messages as |message|}}
          <li class="text-danger">{{message}}</li>
        {{/each}}
      </ul>
    {{/if}}

    <div class="form-floating">
      <input
        type="email"
        id="floating-username"
        class="form-control"
        name="username"
        placeholder="E-mail address"
        required
        aria-required="true"
      />
      <label for="floating-username" class="text-dark sr-only">Username</label>
    </div>

    <div class="form-floating">
      <input
        type="password"
        id="floating-password"
        class="form-control"
        name="password"
        placeholder="Password"
        required
        aria-required="true"
      />
      <label for="floating-password" class="text-dark sr-only">Password</label>
    </div>

    <div class="checkbox mb-3 text-end small">
      <label style="cursor: pointer">
        <input type="checkbox" value="remember-me" />
        Remember me
      </label>
    </div>

    <button class="w-100 btn btn-danger" type="submit">
      Sign in
    </button>
  </form>
</div>
